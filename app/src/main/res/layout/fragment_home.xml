<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_home_lastScanTimeLabel_txtVw_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vertical_margin_standard"
        tools:text="@string/text_last_scan_time_label"
        android:text="@string/text_last_scan_time_label"
        style="@style/LastScanLabelText"/>

    <TextView
        android:id="@+id/fragment_home_lastScanTimeValue_txtVw_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fragment_home_lastScanTimeLabel_txtVw_id"
        android:layout_toEndOf="@id/fragment_home_lastScanTimeLabel_txtVw_id"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        tools:text="@string/text_last_scan_time_value"
        android:text="@string/text_last_scan_time_value"
        style="@style/LastScanValueText"/>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_home_lastScanTimeLabel_txtVw_id"
                android:layout_marginBottom="@dimen/vertical_margin_standard">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/fragment_home_largest_files_crdVw_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="3dp"
                app:cardUseCompatPadding="true"
                app:elevation="4dp">
                <include layout="@layout/layout_largest_files_overview"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_home_frequent_files_crdVw_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_small"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="3dp"
                app:cardUseCompatPadding="true"
                app:elevation="4dp">
                <include layout="@layout/layout_frequent_files_overview"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_home_average_file_size_crdVw_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_small"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="3dp"
                app:cardUseCompatPadding="true"
                app:elevation="4dp">
                <include layout="@layout/layout_average_file_size_overview"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>