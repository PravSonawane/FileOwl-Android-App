<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/fragment_greeting_root_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_greeting_info_txtVw_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_small"
            android:layout_centerInParent="true"
            android:gravity="center"
            tools:text="@string/text_greetings2"
            android:text="@string/text_greetings2"
            style="@style/GreetingsInfoText"/>

        <ImageView
            android:id="@+id/fragment_greeting_owl_ImgVw_id"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_above="@id/fragment_greeting_info_txtVw_id"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_owl"/>

        <TextView
            android:id="@+id/fragment_greeting_hoothoot_txtVw_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin_small"
            android:layout_above="@id/fragment_greeting_owl_ImgVw_id"
            android:layout_centerHorizontal="true"
            tools:text="@string/text_greetings"
            android:text="@string/text_greetings"
            style="@style/GreetingsText"/>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_greeting_scan_fab_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/horizontal_margin_standard"
        android:layout_marginEnd="@dimen/horizontal_margin_standard"
        android:layout_marginBottom="@dimen/vertical_margin_standard"
        android:src="@drawable/ic_file_system_search"
        app:layout_anchorGravity="top|left"
        android:layout_gravity="bottom|end"/>

</android.support.design.widget.CoordinatorLayout>