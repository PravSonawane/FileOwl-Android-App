<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="CardTitleText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardTitleTextHighlighted">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/card_title_text_highlight_color</item>
    </style>

    <style name="LargeFileName">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/large_file_name_text_size</item>
    </style>
    <style name="LargeFilePath">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/large_file_path_text_size</item>
        <item name="android:textColor">@color/large_file_path_text_color</item>
    </style>
    <style name="LargeFileSize">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/large_file_size_text_size</item>
    </style>
    <style name="CardActionButton">
        <item name="android:minWidth">@dimen/action_button_minWidth</item>
        <item name="android:minHeight">@dimen/action_button_minHeight</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#2196F3</item>
    </style>
</resources>
