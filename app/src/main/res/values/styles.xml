<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base.AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="OverviewTitleText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/overview_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OverviewTitleTextHighlighted">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/overview_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/overview_title_text_highlight_color</item>
    </style>

    <style name="OverviewSampleName">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/overview_name_text_size</item>
    </style>
    <style name="OverviewSampleDescription">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/overview_description_text_size</item>
        <item name="android:textColor">@color/overview_description_text_color</item>
    </style>
    <style name="LargeFileSize">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/large_file_size_text_size</item>
    </style>
    <style name="OverviewActionButton">
        <item name="android:minWidth">@dimen/action_button_minWidth</item>
        <item name="android:minHeight">@dimen/action_button_minHeight</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#2196F3</item>
    </style>

    <style name="LastScanLabelText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/overview_title_text_size</item>
    </style>

    <style name="LastScanValueText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/overview_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
